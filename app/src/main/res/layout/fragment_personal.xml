<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey_e9eaeb"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_avatar"
                style="@style/tv_title"
                android:text="头像"
                android:textSize="18sp"
                android:paddingLeft="5dp"/>
            <com.example.friendcircle.widget.CustomRoundAngleImageView
                android:id="@+id/cusiv_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:radius="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/rect_avatar"
                android:layout_toLeftOf="@+id/iv_arrow_right"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow_16"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/bg_grey_e9eaeb"/>
        <com.example.friendcircle.widget.ContentView
            android:id="@+id/cv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.example.friendcircle.widget.ContentView
            android:id="@+id/cv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.example.friendcircle.widget.ContentView
            android:id="@+id/cv_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.example.friendcircle.widget.ContentView
            android:id="@+id/cv_login_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        style="@style/buttonStyle"
        android:text="保存"/>

</LinearLayout>